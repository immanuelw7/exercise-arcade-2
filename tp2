import arcade
import random

SCREEN_WIDTH = 640
SCREEN_HEIGHT = 480
SCREEN_TITLE = "hurray"

class Circle:
    def __init__(self, x, y, r, color):
        self.c_x = x
        self.c_y = y
        self.rayon = r
        self.color = color

    def draw(self):
        arcade.draw_circle_filled(self.c_x, self.c_y, self.r, self.color)

class MyGame(arcade.Window):
    def __init__(self):
        super().__init__(SCREEN_TITLE, SCREEN_HEIGHT, SCREEN_WIDTH)
        self.circles = []

    def setup(self):
        for i in range(20):
            x = random.randint(r, SCREEN_WIDTH - r)
            y = random.randint(r, SCREEN_HEIGHT - r)
            r = random.randint(10, 50)
            color = (random.randint(0, 255), random.randint(0, 255), random.randint(0, 255))
            circle = Circle(r,x,y, color)
            self.circles.append(circle)

    def on_mouse_press(self, x, y, button, modifiers):
        if button == arcade.MOUSE_BUTTON_LEFT and x > circle.c_x and x < circle.c_y :
            for circle in self.circles:
                if circle.contains(x, y):
                    self.circles.remove(circle)
                    break
        elif button == arcade.MOUSE_BUTTON_RIGHT:
            for circle in self.circles:
                if circle.contains(x, y):
                    circle.color = (random.randint(0, 255), random.randint(0, 255), random.randint(0, 255))
                    break

def main():
    my_game = MyGame()
    my_game.setup()
    arcade.run()

main()
