import arcade
import random

SCREEN_WIDTH = 800
SCREEN_HEIGHT = 800
les_couleurs = [arcade.color.AERO_BLUE, arcade.color.AFRICAN_VIOLET, arcade.color.AIR_FORCE_BLUE, arcade.color.AQUA, arcade.color.BABY_BLUE_EYES, arcade.color.BANANA_YELLOW, arcade.color.BLIZZARD_BLUE, arcade.color.BLUEBERRY]


class Circle:
    def __init__(self, c_x, c_y, rayon, color):
        self.c_x = c_x
        self.c_y = c_y
        self.rayon = rayon
        self.color = color

    def draw(self):
        arcade.draw_circle_filled(self.c_x, self.c_y, self.rayon, self.color)


class MyGame(arcade.Window):
    def __init__(self):
        super().__init__(SCREEN_WIDTH, SCREEN_HEIGHT, "Exercice #2?????????????????????????")
        self.circles = []

    def setup(self):
        for i in range(20):
            rayon = random.randint(10, 50)
            c_x = random.randint(0 + rayon, SCREEN_WIDTH - rayon)
            c_y = random.randint(0 + rayon, SCREEN_HEIGHT - rayon)
            color = random.choice(les_couleurs)
            self.circles.append(Circle(c_x, c_y, color, rayon))




    def on_draw(self):
        arcade.start_render()
        for circle in self.circles:
            circle.draw()

    def on_mouse_press(self, x, y, button, modifiers):
        if button == arcade.MOUSE_BUTTON_LEFT:
            for circle in self.circles:
                if circle.c_x - circle.rayon <= x <= circle.c_x + circle.rayon and circle.c_y - circle.rayon <= y <= circle.c_y + circle.rayon:

                    self.circles.remove(circle)

        elif button == arcade.MOUSE_BUTTON_RIGHT:
            for circle in self.circles:
                if circle.c_x - circle.rayon <= x <= circle.c_x + circle.rayon and circle.c_y - circle.rayon <= y <= circle.c_y + circle.rayon:

                    circle.color = random.choice(les_couleurs)
                   

def main():
    my_game = MyGame()
    my_game.setup()
    arcade.run()


main()
